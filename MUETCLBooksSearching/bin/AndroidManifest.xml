<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.muetclbookssearching"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.muetclbookssearching.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.muetclbookssearching.UserAuthorization"
            android:label="@string/activity_user_authorization" >
        </activity>
        
        <activity
            android:name="com.android.muetclbookssearching.ResponseByTitle"
            android:label="@string/title_activity_response_by_title" >
        </activity>
        <activity
            android:name="com.android.muetclbookssearching.BookSearching"
            android:label="@string/title_activity_book_searching" >
        </activity>
        <activity
            android:name="com.android.muetclbookssearching.SearchByAuthor"
            android:label="@string/title_activity_search_by_author" >
        </activity>
        <activity
            android:name="com.android.muetclbookssearching.ResponseByAuthor"
            android:label="@string/title_activity_response_by_author" >
        </activity>
        <activity
            android:name="com.android.muetclbookssearching.ResponseByKeyWord"
            android:label="@string/title_activity_response_by_key_word" >
        </activity>
        
    </application>

</manifest>
